! -*-xrdb-*-

!== Extensions ==!
URxvt.perl-ext-common: fullscreen
URxvt.keysym.F11:      perl:fullscreen:switch

!== Geometries ==!
emacs.geometry:        100x40
URxvt.geometry:        100x40

! fonts
URxvt.depth:          32
URxvt.font:           xft:Luxi Mono:pixelsize=12,-misc-fixed-bold-r-normal--15-140-75-75-c-90-iso10646-1,-misc-fixed-medium-r-normal--15-140-75-75-c-90-iso10646-1
URxvt.boldFont:       xft:Luxi Mono:pixelsize=12:bold,-misc-fixed-bold-r-normal--15-140-75-75-c-90-iso10646-1,-misc-fixed-medium-r-normal--15-140-75-75-c-90-iso10646-1
URxvt.italicFont:     xft:Luxi Mono:pixelsize=12:italic,-misc-fixed-bold-i-normal--15-140-75-75-c-90-iso10646-1,-misc-fixed-medium-i-normal--15-140-75-75-c-90-iso10646-1
URxvt.boldItalicFont: xft:Luxi Mono:pixelsize=12:italic,-misc-fixed-bold-i-normal--15-140-75-75-c-90-iso10646-1,-misc-fixed-medium-i-normal--15-140-75-75-c-90-iso10646-1

! behaviour
URxvt.cursorBlink:      false
URxvt.cutchars:         "`\"\'&()*,;@<=>?[]{|}"
URxvt.insecure:         false
URxvt.jumpScroll:       true
URxvt.mapAlert:         false
URxvt.meta8:            false
URxvt.pastableTabs:     true
URxvt.pointerBlank:     false
URxvt.print-pipe:       cat
URxvt.saveLines:        8192
URxvt.scrollstyle:      plain
URxvt.skipScroll:       true
URxvt*termName:         rxvt
URxvt.tripleclickwords: true
URxvt.utmpInhibit:      true
journalctl.externalBorder: 0
journalctl.internalBorder: 0
script-status.externalBorder: 0
script-status.internalBorder: 0

! scrollbar
URxvt.scrollBar:         false
URxvt.scrollBar_right:   true
URxvt.scrollColor:       #298aa5
URxvt.scrollTtyKeypress: true
URxvt.scrollTtyOutput:   false
URxvt.scrollWithBuffer:  true
urxvt-fs.scrollBar:      false

! misc colors
URxvt.background:    [90]#000000
URxvt.foreground:    #FCCCB8
URxvt.colorBD:       #FFE0D0
URxvt.colorIT:       #FFC080
URxvt.colorUL:       #FFC080
URxvt.cursorColor:   #C00000
URxvt.cursorColor2:  #FF8000
URxvt.reverseVideo:  false
URxvt.inheritPixmap: false
URxvt.pointerColor:  #FFFFA5
URxvt.pointerColor2: #600000
urxvt-fs.background: [95]#000000

! colors
URxvt.color0:  #000000
URxvt.color1:  #DE0000
URxvt.color2:  #00DE00
URxvt.color3:  #FF8000
URxvt.color4:  #0000C0
URxvt.color5:  #C000C0
URxvt.color6:  #00C0C0
URxvt.color7:  #C0C0C0
URxvt.color8:  #808080
URxvt.color9:  #FF0000
URxvt.color10: #00FF00
URxvt.color11: #FFFF00
URxvt.color12: #8080FF
URxvt.color13: #FF00FF
URxvt.color14: #00FFFF
URxvt.color15: #FFFFFF

Xcursor.theme: Adwaita
